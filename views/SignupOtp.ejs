<container>
  <row>
    <columns small="12">
      <table
        border="0"
        cellpadding="0"
        cellspacing="0"
        width="100%"
        style="
          border-spacing: 0;
          border-left: 1px solid #e8e7e5;
          border-right: 1px solid #e8e7e5;
          border-bottom: #e8e7e5;
          padding: 10px;
        "
        bg="#ffffff">
        <tr>
          <div
            width="350"
            height="150"
            align="center"
            style="border-radius: 50%">
            <img
              src="https://cdn3.vectorstock.com/i/1000x1000/22/82/green-check-mark-icon-in-a-circle-tick-symbol-vector-29002282.jpg"
              width="60"
              height="60"
              style="padding-top: 5px"
              border="0" />
          </div>
        </tr>
        <tr>
          <td align="center" style="padding: 0px 40px 40px 40px">
            <p
              style="
                color: #262626;
                font-size: 32px;
                text-align: center;
                font-family: Verdana, Geneva, Tahoma, sans-serif;
              ">
              Hello! <%=name%> <br />
            </p>
            Your Otp is <%=otpNumber%><br />
          </td>
        </tr>
      </table>
    </columns>
  </row>
</container>
